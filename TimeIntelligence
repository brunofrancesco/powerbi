TotalVendasReceita = SUM(Vendas[Receita])
TotalUnidadesVendidas = SUM(Vendas[Quantidade])
ReceitaDiaAnterior = CALCULATE([TotalVendasReceita],PREVIOUSDAY('dCalendar'[Data]))
ReceitaMesmoDiaAnoAnterior = CALCULATE([TotalVendasReceita],SAMEPERIODLASTYEAR('dCalendar'[Data]))
